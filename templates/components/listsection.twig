<section class="pt-4">
	<div class="container">
		<div class="row">
			<!-- Title -->
			<div class="col-md-12">
				<div class="mb-4 d-md-flex justify-content-between align-items-center">
					<h2 class="m-0"><i class="bi bi-megaphone me-2"></i> Latest news</h2>
					<a href="#" class="text-body small"><u>Content by: Bootstrap</u></a>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-6">
				<!-- Card item START -->
				{% set blogs = craft.entries.section('blog').limit(3) %}
                {% for blog in blogs %} 
                {% set photo = blog.featuredImage.one() %}
				<div class="card mb-3 mb-sm-4">
					<div class="row g-3">
						<div class="col-4">
							<img class="rounded-3" src="{{ blog.featuredImage.one().getUrl('miniunit') }}" alt="">
						</div>
						<div class="col-8">
							<h4><a href="{{ blog.url }}" class="btn-link stretched-link text-reset fw-bold">{{ blog.title }}</a></h4>
							<p>{{ blog.commonExcerpt }}</p>
							<!-- Card info -->
							<ul class="nav nav-divider align-items-center d-none d-sm-inline-block">
								<li class="nav-item">
									<div class="nav-link">
										<div class="d-flex align-items-center position-relative">
											
											<span class="ms-3">By <a href="#" class="stretched-link text-reset btn-link">{{ blog.author }}</a></span>
										</div>
									</div>
								</li>
								<li class="nav-item">{{blog.postDate|date('d M Y')}}</li>
							</ul>
						</div>
					</div>
				</div>
				{% endfor %}
				<!-- Card item END -->
			</div>
			<div class="col-lg-6">
				<!-- Card item START -->
				{% set blogs = craft.entries.section('blog').limit(3).offset(3) %}
                {% for blog in blogs %} 
                {% set photo = blog.featuredImage.one() %}
				<div class="card mb-3 mb-sm-4">
					<div class="row g-3">
						<div class="col-4">
							<img class="rounded-3" src="{{ blog.featuredImage.one().getUrl('miniunit') }}" alt="">
						</div>
						<div class="col-8">
							<h4><a href="{{ blog.url }}" class="btn-link stretched-link text-reset fw-bold">{{ blog.title }}</a></h4>
							<p>{{ blog.commonExcerpt }}</p>
							<!-- Card info -->
							<ul class="nav nav-divider align-items-center d-none d-sm-inline-block">
								<li class="nav-item">
									<div class="nav-link">
										<div class="d-flex align-items-center position-relative">
											
											<span class="ms-3">By <a href="#" class="stretched-link text-reset btn-link">{{ blog.author }}</a></span>
										</div>
									</div>
								</li>
								<li class="nav-item">{{blog.postDate|date('d M Y')}}</li>
							</ul>
						</div>
					</div>
				</div>
				{% endfor %}
				<!-- Card item END -->
			</div>
		</div>
	</div>
</section>
