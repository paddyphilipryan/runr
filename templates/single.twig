{% extends "index" %}


{% set pageTitle = entry.title %}
{% set pageDescription = entry.commonExcerpt %}

{% block content %}

<section class="pt-4">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="card card-overlay-bottom h-400 overflow-hidden text-center" style="background-image:url({{ entry.featuredImage.one().getUrl('hero') }}); background-position: center left; background-size: cover;">
					<!-- Card Image overlay -->
					<div class="card-img-overlay d-flex align-items-center p-3 pb-4 px-sm-5"> 
						<div class="col-12 mt-auto d-md-flex justify-content-between align-items-center">
							<h1 class="text-white display-5">{{ entry.title }}</h1>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- =======================
Main content START -->
<section class="position-relative pt-0">
	<div class="container">
		<div class="row">
			{{ entry.mainContent }}
            {{ entry.htmlField }}
            <h2>Subscribe to Run Republic</h2>
            <script charset="utf-8" type="text/javascript" src="//js-eu1.hsforms.net/forms/embed/v2.js"></script>
                <script>
                hbspt.forms.create({
                    region: "eu1",
                    portalId: "25769310",
                    formId: "043bb2ca-fa0b-4412-b87a-6a60c6c3e651"
                });
                </script>
		</div> <!-- Row end -->
	</div>
</section>
<!-- =======================
Main content END -->

{% endblock %}