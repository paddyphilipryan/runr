<section class="pt-4">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<!-- Title -->
				<div class="mb-4">
					<h2 class="m-0">Discover blogs</h2>
					<p class="m-0">Get inspired by fellow runners and their stories</p>
				</div>
                <div class="media-scroller3 snaps-inline">
                {% set blogs = craft.entries.section('blog').all() %}
                {% for blog in blogs %} 
                {% set photo = blog.featuredImage.one() %}
                    <div>
							<div class="card card-overlay-bottom card-img-scale">
								<!-- Card Image -->
								<img class="card-img" src="{{ blog.featuredImage.one().getUrl('cards') }}" alt="">
                                
								<!-- Card Image overlay -->
								<div class="card-img-overlay d-flex flex-column p-3 p-sm-4"> 
									
									<div class="w-100 mt-auto">
										
										<!-- Card title -->
										<h4 class="text-white"><a href="{{ blog.url }}" class="btn-link text-reset stretched-link">{{ blog.title }}</a></h4>
										<!-- Card info -->
										<ul class="nav nav-divider text-white-force align-items-center d-none d-sm-inline-block small">
											<li class="nav-item position-relative">
												<div class="nav-link">By <a href="#" class="stretched-link text-reset btn-link">{{ blog.author }}</a>
												</div>
											</li>
											<li class="nav-item">{{blog.postDate|date('d M Y')}}</li>
										</ul>
									</div>
								</div>
							</div>
						</div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>


