<section class="pt-0 pt-md-5">
	<div class="container">
		<!-- Title -->
		<div class="row">
			<div class="col-12">

				<!-- Title -->
				<div class="d-flex justify-content-between align-items-center mb-4">
					<h3 class="m-0">Select Categories</h3>
					<a href="#" class="text-body small"><u>View all</u></a>
				</div>
				
				<!-- Slider -->
				<div class="tiny-slider arrow-hover arrow-dark arrow-blur arrow-round">
					<div class="tiny-slider-inner"
					data-autoplay="false"
					data-hoverpause="true"
					data-gutter="24"
					data-arrow="true"
					data-dots="false"
					data-items-xl="5" 
					data-items-lg="4" 
					data-items-md="3" 
					data-items-sm="2" 
					data-items-xs="2"
					>
						
						<!-- Category item -->
						{% set blogs = craft.entries.section('blog').all() %}
                        {% for blog in blogs %} 
                        {% set photo = blog.featuredImage.one() %}
						<a href="{{ blog.url }}" class="cta-link">
						<div>
							<div class="card bg-transparent">
								<img class="card-img" src="{{ blog.featuredImage.one().getUrl('catMini') }}" alt="card image">
								<div class="card-body ps-0">
									<h5 class="mb-0">{{ blog.title }}</h5>
								</div>
							</div>
						</div>
						</a>
						{% endfor %}
					</div>
				</div> <!-- Slider END -->
			</div>
		</div>
	</div>
</section>
<!-- =======================
Category END -->